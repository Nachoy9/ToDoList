<%- include("header") -%>
    
        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
        </div>
        
        <div class="box">

            <% for (let i = 0; i < newItem.length; i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newItem[i] %></p>
                </div>            
            <% } %>

            <form class="item" action="/" method="post">
                <input placeholder="New Task" type="text" name="addTask" id="addToDolist" autocomplete="off">
                <button class="taskadd" type="submit" name="addtask" value="<%= changeList %>">+</button>
            </form>

        </div>

        <div class="footerbox" id="heading">

            <form action="/" method="post">
                <button class="changelist" name="changelist" value="<%= changeList %>"><%= changeList %></button>
            </form>

        </div>

<%- include("footer") -%>